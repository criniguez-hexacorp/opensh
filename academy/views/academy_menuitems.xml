<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- academy.course actions -->
        <record model="ir.actions.act_window" id="academy_course_action">
            <field name="name">Courses</field>
            <field name="res_model">academy.course</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first course
                </p>
            </field>
        </record>
        
        <!-- academy.session actions -->
        <record model="ir.actions.act_window" id="academy_session_action">
            <field name="name">Sessions</field>
            <field name="res_model">academy.session</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first session
                </p>
            </field>
        </record>
        
        <!-- menus -->
        
        <!-- root menu -->
        <menuitem
            id="academy_root_menu"
            name="Academy"
            sequence="1"/>
        
        <!-- sub menus (level 1) -->
        <menuitem
            id="academy_models_menu"
            name="Academy"
            parent="academy_root_menu"
            sequence="2"/>
        
        <!-- sub menus (level 2) -->
        <menuitem
            id="academy_course_menu"
            name="Course"
            parent="academy_models_menu"
            action="academy_course_action"
            sequence="3"/>
        <menuitem
            id="academy_session_menu"
            name="Session"
            parent="academy_models_menu"
            action="academy_session_action"
            sequence="3"/>
    
    </data>
</odoo>