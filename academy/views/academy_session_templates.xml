<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="academy_session_website">
            <t t-call="website.layout">
                <t t-set="title">Academy - Session</t>
                <div class="oe_structure">
                    <div class="container">
                        <h3 t-field="session.name"/>
                        <p>Last modified:
                            <i t-field="session.write_date" t-field-options="{'format': 'long'}"/>
                        </p>
                        <p>Course:
                            <t t-esc="session.course_id.name"/>
                        </p>
                        <h3>Students:</h3>
                        <ul>
                            <t t-foreach="session.student_ids" t-as="student">
                                <li><span t-field="student.name"/></li>
                            </t>
                        </ul>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>