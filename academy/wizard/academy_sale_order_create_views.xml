<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- form -->
        <record id="academy_sale_order_create_view_form" model="ir.ui.view">
            <field name="name">academy.sale.order.create.view.form</field>
            <field name="model">academy.sale.order.create</field>
            <field name="arch" type="xml">
                <form string="Create Sale Order for Session">
                    <group>
                        <field name="session_id"/>
                        <field name="session_student_ids" invisible="1"/>
                        <field name="student_ids" domain="[('id', 'in', session_student_ids)]"/>
                    </group>
                    <footer>
                        <button name="create_sale_orders" type="object" string="Create" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- action -->
        <act_window id="academy_sale_order_create_action" 
                    name="Create Sale Order" 
                    binding_model="academy.session" 
                    res_model="academy.sale.order.create"
                    view_mode="form"
                    target="new"/>
        
    </data>
</odoo>