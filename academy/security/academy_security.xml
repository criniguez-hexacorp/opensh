<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- groups -->
    
        <record id="group_academy_admin" model="res.groups">
            <field name="name">Academy / Admin</field>
        </record>

        <!-- rules -->

        <record id="academy_course_active_modify_rule" model="ir.rule">
             <field name="name">Only Active Course Can Be Modified</field>
             <field name="model_id" ref="model_academy_course"/>
             <field name="perm_read" eval="0" />
             <field name="perm_create" eval="1" />
             <field name="perm_write" eval="0" />
             <field name="perm_unlink" eval="1" />
             <field name="domain_force">[('active','=',True)]</field>
        </record>
        
    </data>
</odoo>