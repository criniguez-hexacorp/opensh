<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- academy.course actions -->
        <record id="academy_course_action" model="ir.actions.act_window">
            <field name="name">Courses</field>
            <field name="res_model">academy.course</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create your First Course!</p>
            </field>
        </record>
        
        <!-- menus -->
        
        <!-- root menu -->
        <menuitem
            id="academy_root_menu"
            name="Academy"
            sequence="10"/>
        
        <!-- sub menus -->
        <menuitem
            id="academy_course_menu"
            name="Course"
            action="academy_course_action"
            parent="academy_root_menu"
            sequence="10"/>
    
    </data>
</odoo>